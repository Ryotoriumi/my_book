<p id="notice"><%= notice %></p>

<h1>Listing Bookinfos</h1>

<table>
  <thead>
    <tr>
      <th>Book name</th>
      <th>Image</th>
      <th>Author</th>
      <th>Price</th>
      <th>Publisher</th>
      <th>Release date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bookinfos.each do |bookinfo| %>
      <tr>
        <td><%= bookinfo.book_name %></td>
        <!--<td><%= bookinfo.image_source %></td>-->
        <td><%= image_tag(bookinfo.image_source) %></td>
        <td><%= bookinfo.author %></td>
        <td><%= bookinfo.price %></td>
        <td><%= bookinfo.publisher %></td>
        <td><%= bookinfo.release_date %></td>
        <td><%= link_to 'Show', bookinfo %></td>
        <td><%= link_to 'Edit', edit_bookinfo_path(bookinfo) %></td>
        <td><%= link_to 'Destroy', bookinfo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

